<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_pilih_lokasi" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView1"
            android:layout_centerHorizontal="true"
            android:text="Pilih Lokasimu"
            android:textSize="23sp"
            android:textColor="#4b64e8"
            app:fontFamily="@font/poppins_medium" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_below="@id/textView1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:id="@+id/card_view_jakarta"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/jakarta" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/imageView2"
                        android:layout_height="wrap_content"
                        android:text="DKI Jakarta"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        app:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/imageView2"
                        android:layout_height="wrap_content"
                        android:text="Include: Jakarta - Depok - Tangerang - Bekasi"
                        android:layout_below="@id/textView2"
                        android:textSize="10sp"
                        android:textColor="#A6A6A6"
                        android:layout_marginTop="10dp"
                        app:fontFamily="@font/poppins_medium" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_surabaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/surabaya" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/imageView4"
                        android:layout_height="wrap_content"
                        android:text="Surabaya"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        app:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/imageView4"
                        android:layout_height="wrap_content"
                        android:text="Include: Surabaya"
                        android:layout_below="@id/textView4"
                        android:textSize="10sp"
                        android:textColor="#A6A6A6"
                        android:layout_marginTop="10dp"
                        app:fontFamily="@font/poppins_medium" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
</RelativeLayout>